<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Hello World!" />

    <com.gmail.apigeoneer.mellow.utils.BoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a Montserrat Bold Text View!" />

    <com.gmail.apigeoneer.mellow.utils.NormalTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a Montserrat Text View!" />

    <com.gmail.apigeoneer.mellow.utils.NormalEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <com.gmail.apigeoneer.mellow.utils.NormalButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Here" />

</LinearLayout>